#  Purview CLI v2.0 - Environment Configuration

# Application Settings
APP_NAME= Purview CLI API
VERSION=2.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-with-64-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure Purview Configuration
PURVIEW_ACCOUNT_NAME=your-purview-account
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
PURVIEW_ENDPOINT=https://your-purview-account.purview.azure.com

# Database Configuration
DATABASE_URL=postgresql://purview:purview123@localhost:5432/purview_cli

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000","http://127.0.0.1:3001"]

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# WebSocket Configuration
WS_CONNECTION_TIMEOUT=600
WS_HEARTBEAT_INTERVAL=30
